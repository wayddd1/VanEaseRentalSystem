{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd backend_web/VanEase && chmod +x mvnw && ./mvnw clean package -DskipTests"
  },
  "deploy": {
    "startCommand": "cd backend_web/VanEase && java -Dspring.profiles.active=railway -jar target/VanEase-0.0.1-SNAPSHOT.jar",
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 300
  }
}
