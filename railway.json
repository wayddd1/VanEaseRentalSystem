{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd backend_web/VanEase && chmod +x mvnw && ./mvnw clean package -DskipTests"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "cd backend_web/VanEase && java -jar -Dspring.profiles.active=railway target/VanEase-0.0.1-SNAPSHOT.jar",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 300
  }
}
